<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <separator label="Launchers" />
    <item label="Terminal emulator" icon="/usr/share/icons/Tango/scalable/apps/utilities-terminal.svg">
      <action name="Execute"><execute>~/.config/openbox/scripts/urxvt.sh</execute></action>
    </item>
    <item label="Chrome (work)" icon="/usr/share/icons/hicolor/48x48/apps/google-chrome.png">
      <action name="Execute"><execute>~/.config/openbox/scripts/chrome-default-user.sh</execute></action>
    </item>
    <item label="Chrome (personal)" icon="/usr/share/icons/hicolor/48x48/apps/google-chrome.png">
      <action name="Execute"><execute>~/.config/openbox/scripts/chrome-personal.sh</execute></action>
    </item>
    <item label="File manager" icon="/usr/share/icons/Tango/scalable/apps/system-file-manager.svg">
      <action name="Execute"><execute>thunar</execute></action>
    </item>
    <item label="Dictionary" icon="/usr/share/icons/Tango/scalable/actions/system-search.svg">
      <action name="Execute"><execute>~/.config/openbox/scripts/youdao_dict.sh</execute></action>
    </item>
    <item label="Volume control" icon="/usr/share/icons/Tango/scalable/status/stock_volume.svg">
      <action name="Execute"><execute>pavucontrol</execute></action>
    </item>
  <separator label="HCI" />
  <item label="Reset HCI settings" icon="/usr/share/icons/Tango/scalable/actions/stock_refresh.svg">
    <action name="Execute"><execute>~/.config/openbox/scripts/hci-adjustments</execute></action>
  </item>
  <item label="Night mode" icon="/usr/share/icons/Tango/scalable/status/weather-clear-night.svg">
    <action name="Execute"><execute>~/.config/openbox/scripts/color-mode.sh night</execute></action>
  </item>
  <item label="Outdoor mode" icon="/usr/share/icons/Tango/scalable/status/weather-clear.svg">
    <action name="Execute"><execute>~/.config/openbox/scripts/color-mode.sh outdoor</execute></action>
  </item>
  <item label="Switch wallpaper" icon="/usr/share/icons/Tango/scalable/apps/wallpaper.svg">
    <action name="Execute"><execute>~/.config/openbox/scripts/prepare-wallpaper.sh</execute></action>
  </item>
  <separator label="System" />
  <item label="Restart panels" icon="/usr/share/icons/Tango/scalable/actions/stock_refresh.svg">
    <action name="Execute"><execute>~/.config/openbox/scripts/restart-panels.sh</execute></action>
  </item>
  <item label="Reload OB config" icon="/usr/share/icons/Tango/scalable/actions/stock_refresh.svg">
    <action name="Reconfigure" />
  </item>
  <item label="Lock screen" icon="/usr/share/icons/Tango/scalable/actions/lock.svg">
    <action name="Execute"><execute>~/.config/openbox/scripts/lock.sh</execute></action>
  </item>
  <item label="Shutdown" icon="/usr/share/icons/Tango/scalable/actions/system-shutdown.svg">
    <action name="Execute"><execute>~/.config/openbox/scripts/shutdown-xterm.sh</execute></action>
  </item>
  <item label="Log out" icon="/usr/share/icons/Tango/scalable/actions/system-log-out.svg">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
