DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Change key repeat rate
xset r rate 220 30

redshift -O 6100

$DIR/scripts/start_if_absent.sh urxvtd urxvtd -q -o -f
$DIR/scripts/start_if_absent.sh xss-lock xss-lock -- $DIR/scripts/lock.sh
$DIR/scripts/start_if_absent.sh wallpaper-auto-switcher.sh $DIR/scripts/wallpaper-auto-switcher.sh || $DIR/scripts/prepare-wallpaper.sh

# something wrong with my workstation that I need to restart ibus-daemon
# to get it actually work.
$DIR/scripts/restart_ibus.sh

# light-locker is the screen locker from lightdm.
# I want to use my own locker, so disable it.
# Alternatively, just "apt-get remove light-locker"
# killall light-locker

# Use "xinput list-props <device_id>" to view all properties

xinput set-prop 'DLL07BF:01 06CB:7A13 Touchpad' --type=int 'libinput Disable While Typing Enabled' 0
xinput set-prop 'DLL07BF:01 06CB:7A13 Touchpad' --type=int 'libinput Tapping Enabled' 0
xinput set-prop 'DLL07BF:01 06CB:7A13 Touchpad' --type=int 'libinput Tapping Drag Enabled' 0

# Faster pointer acceleration
xinput set-prop 'DLL07BF:01 06CB:7A13 Touchpad' --type=float 'libinput Accel Speed' 0.5

redshift -O 5800

xfce4-panel &
xfce4-power-manager &
